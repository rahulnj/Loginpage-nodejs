<header>
  <nav class='navbar navbar-light bg-light'>
    <div class='container-fluid'>
      <a class='navbar-brand' href=''>
        <img
          src='https://previews.123rf.com/images/arbuzu/arbuzu1504/arbuzu150400047/39829764-mobile-phone-app-letter-m-logo-icon-design-template-elements.jpg'
          alt='' width='30' height='24' class='d-inline-block align-text-top fw-3' />
        {{name}}
      </a>

      <div class='d-grid gap-2 d-md-flex justify-content-md-end'>
        {{#if status}}
        <button class='btn btn-primary btn-danger me-md-2' type='button'><a href="/logout"
            style="text-decoration: none; color:white">Sign out </a></button>
        {{else}}
        <button class='btn btn-primary btn-primary me-md-2' type='button'><a href="/"
            style="text-decoration: none; color:white">Log in </a></button>
        {{/if}}
      </div>
    </div>

  </nav>
</header>
<section>
  <div class='container-fluid'>
    <div class='container mt-5'>
      <div class='row'>
        {{#each products}}
        <div class='col-md-3 shadow-sm'>
          <div class='card' style='width: 18rem;'>
            <img src='{{this.image}}' class='card-img-top' alt='...' />
            <div class='card-body'>
              <h5 class='card-title'>{{this.name}}</h5>
              <p class='card-text'>{{this.description}}</p>
              <a href='#' class='btn btn-primary'>Add to cart</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>